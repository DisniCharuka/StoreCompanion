<Page
    x:Class="Store_Companion.Interfaces.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Store_Companion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="LightBlue"  Grid.Row="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Name="lblStoreHeading" Grid.Row="0" Text="STORE COMPANION" FontSize="24" HorizontalAlignment="Center" Foreground="DarkBlue" FontWeight="Bold"/>
                <TextBlock Name="lblScreenHeading" Text="Main menu" Grid.Row="1" FontSize="22" HorizontalAlignment="Left" Foreground="Blue"/>
            </Grid>
        </StackPanel>

        <StackPanel Background="AliceBlue" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='1' Name="btnProductList" Grid.Row="0" Content="Product List" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                               ></Button>
                <Button x:ConnectionId='2' Name="btnAddNewProduct" Grid.Row="1" Content="Add New Product" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                               ></Button>
                <Button x:ConnectionId='3' Name="btnProductTypes" Grid.Row="2" Content="Product Types" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                              ></Button>
                <Button x:ConnectionId='4' Name="btnSuppliers" Grid.Row="3" Content="Suppliers" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                           ></Button>
                <Button x:ConnectionId='5' Name="btnTotalAssets" Grid.Row="4" Content="Total Assets" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                             ></Button>
                <Button Name="btnNotifications" Grid.Row="5" Content="Notifications" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"></Button>
                <Button x:ConnectionId='6' Name="btnLotList" Grid.Row="6" Content="Lot List" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                         ></Button>
                <Button x:ConnectionId='7' Name="btnAddNewLot" Grid.Row="7" Content="Add New Lot" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                           ></Button>
                <Button x:ConnectionId='8' Name="btnSupplier" Grid.Row="8" Content="Add Supplier" Background="LightBlue" Foreground="DarkBlue" HorizontalAlignment="Stretch"                          ></Button>

            </Grid>
        </StackPanel>
    </Grid>
</Page>

